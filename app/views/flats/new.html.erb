<form action="/flats" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <label for="name">Name: </label>
  <input type="text" name="flat[name]" id="name">

  <label for="address">Address: </label>
  <input type="text" name="flat[address]" id="address">

  <input type="submit">
</form>
